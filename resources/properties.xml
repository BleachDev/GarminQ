<resources>
    <properties>
        <property id="statsMode" type="number">0</property>
        <property id="inActivity" type="boolean">true</property>
        <property id="distMode" type="number">0</property>
    </properties>

    <settings>
        <setting propertyKey="@Properties.inActivity" title="Trigger In Activity">
            <settingConfig type="boolean" />
        </setting>
        <setting propertyKey="@Properties.statsMode" title="Stats Mode">
            <settingConfig type="list">
                <listEntry value="0">Records</listEntry>
                <listEntry value="1">7 Day Avg</listEntry>
                <listEntry value="2">1 Day Avg</listEntry>
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.distMode" title="Gap Distribution">
            <settingConfig type="list">
                <listEntry value="0">Normal</listEntry>
                <listEntry value="1">Exponential</listEntry>
            </settingConfig>
        </setting>
    </settings>
</resources>